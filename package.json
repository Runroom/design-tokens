        "lint:eslint": "eslint src test",
        "lint:prettier": "prettier --check .github src test .eslintrc.json .prettierrc.json package.json template.config.json tsup.config.ts tsconfig.json",
        "release": "changeset publish",
        "test": "jest"
    },
    "engines": {
        "node": ">= 16"
    },
    "dependencies": {
        "node-fetch": "^3.2",
        "style-dictionary": "^3.7",
        "yargs-parser": "^21.1"
